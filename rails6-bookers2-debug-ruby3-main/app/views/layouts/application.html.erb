<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2Ver2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/6b1e51863e.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
      <main>
        <% if user_signed_in? %>
        <div class = "container">
          <div class = "row">
             <div class="serch-form mx-auto mt-3 mb-3 col-mt-12 " >
                <%= form_with url: searches_search_path, method: :get do |f| %>
                  <%= f.text_field :word %>
                  <%= f.select :range, options_for_select([['User'],['Book']]) %>
                  <%= f.select :search, options_for_select([["完全一致","perfect_match"],["部分一致","pertial_match"]]) %>
                  <%= f.submit "検索" %>
                <% end %>
            </div>
          </div>
        </div>
        <% end %>
        <%= yield %>
        <p id="notice"><%= notice %></p>
      </main>
    <%= render 'layouts/footer' %>
  </body>
</html>