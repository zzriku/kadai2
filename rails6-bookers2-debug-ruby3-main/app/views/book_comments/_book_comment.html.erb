<% book.book_comments.each do |book_comment| %>
  <tr>
    <td><%= link_to(book_comment.user, remote: true) do %>
      <%= image_tag book_comment.user.get_profile_image, size:"50x50" %><br />
      <%= book_comment.user.name %>
    <% end %></td>
    <td><%= book_comment.comment %></td>
      <% if book_comment.user_id == current_user.id %>
        <td><%= link_to "Destroy",book_book_comment_path(book,book_comment), method: :delete, remote: true ,class: "btn btn-sm btn-danger" %></td>
      <% end %>
  </tr>
<% end %>